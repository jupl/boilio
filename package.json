{
  "private": true,
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "./setup-tests"
    ],
    "files": "src/**/*.test.js"
  },
  "nyc": {
    "include": "src/**",
    "exclude": "src/**/*.test.js"
  },
  "engines": {
    "node": "^6.0.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "start": "npm run build:prod",
    "clean": "[ -d dist ] && trash dist || true",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "coverage": "nyc npm test",
    "coverage:html": "npm run coverage && nyc report --reporter=html",
    "test": "ava",
    "test:watch": "npm run test -- --watch",
    "server": "cross-env NODE_ENV=development HOT_MODULES=true node hot-server",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development HOT_MODULES=false npm run build",
    "build:prod": "cross-env NODE_ENV=production HOT_MODULES=false npm run build"
  },
  "dependencies": {
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^1.0.8",
    "css-loader": "^0.23.1",
    "file-loader": "^0.8.5",
    "globule": "^1.0.0",
    "normalize.css": "^4.1.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "style-loader": "^0.13.1",
    "trash-cli": "^1.3.0",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-eslint": "^6.0.4",
    "enzyme": "^2.3.0",
    "eslint": "^2.11.1",
    "eslint-config-jupl": "^0.3.5",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-react": "^5.1.1",
    "eventsource-polyfill": "^0.9.6",
    "hapi": "^13.4.1",
    "hapi-webpack-plugin": "^1.3.0",
    "jsdom": "^9.2.1",
    "nyc": "^6.4.4",
    "react-addons-test-utils": "^15.1.0",
    "redbox-react": "^1.2.6"
  }
}
