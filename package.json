{
  "private": true,
  "ava": {
    "babel": "inherit",
    "require": "./setup-tests",
    "files": "src/**/*.test.js"
  },
  "nyc": {
    "include": "src/**"
  },
  "engines": {
    "node": "^5.0.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "clean": "[ -d dist ] && trash dist || true",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "coverage": "nyc npm test",
    "test": "ava",
    "test:watch": "ava --watch",
    "server:hot": "better-npm-run server:hot",
    "build:dev": "npm run clean && better-npm-run build:dev",
    "build:prod": "npm run clean && better-npm-run build:prod"
  },
  "betterScripts": {
    "server:hot": {
      "command": "node hot-server",
      "env": {
        "NODE_ENV": "development",
        "NODE_HOT": "true"
      }
    },
    "build:dev": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-inline-environment-variables": "^6.5.0",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "better-npm-run": "0.0.8",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "file-loader": "^0.8.5",
    "globule": "^0.2.0",
    "normalize.css": "^4.1.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-prefixer": "^1.1.4",
    "style-loader": "^0.13.1",
    "trash": "^3.4.1",
    "webpack": "^1.12.15"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-eslint": "^6.0.2",
    "enzyme": "^2.2.0",
    "eslint": "^2.7.0",
    "eslint-config-jupl": "^0.3.4",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-react": "^4.3.0",
    "eventsource-polyfill": "^0.9.6",
    "hapi": "^13.3.0",
    "hapi-webpack-plugin": "^1.3.0",
    "jsdom": "^8.3.1",
    "nyc": "^6.4.0",
    "react-addons-test-utils": "^15.0.1",
    "redbox-react": "^1.2.3"
  }
}
